{
    "openapi": "3.0.0",
    "info": {
        "title": "Blackjack API",
        "description": "This is a simple Blackjack API.",
        "contact": {
            "email": "your-email@example.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api",
            "description": "Blackjack API Server"
        }
    ],
    "paths": {
        "/players": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register player",
                "description": "This is the endpoint to create and register a new player.",
                "operationId": "registerPlayer",
                "requestBody": {
                    "description": "Player registration details",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "nickname": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Player created successfully"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "API Endpoints for Authentication"
        },
        {
            "name": "Users",
            "description": "API Endpoints of Users"
        },
        {
            "name": "Games",
            "description": "API Endpoints of Games"
        }
    ]
}